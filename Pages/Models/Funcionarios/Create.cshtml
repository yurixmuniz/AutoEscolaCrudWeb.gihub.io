@page
@model ExercicioAutoEscola.Pages.Models.Funcionarios.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="text-center text-light">
    <h4>Cadastrar Funcionario</h4>
    <hr />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Funcionario.Nome" class="control-label"></label>
                            <input asp-for="Funcionario.Nome" class="form-control" />
                            <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Funcionario.Funcao" class="control-label"></label>
                            <select class="custom-select" id="inputGroupSelect01">
                                <option selected>Selecione sua Função</option>
                                <option value="Instrutor">Instrutor</option>
                                <option value="Recepcionista">Recepcionista</option>
                            </select>
                            <span asp-validation-for="Funcionario.Funcao" class="text-danger"></span>
                        </div>
                    </div> 
                    <div class="col-md-2"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Funcionario.Endereco" class="control-label"></label>
                            <input asp-for="Funcionario.Endereco" class="form-control" />
                            <span asp-validation-for="Funcionario.Endereco" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Funcionario.Login" class="control-label"></label>
                            <input asp-for="Funcionario.Login" class="form-control" />
                            <span asp-validation-for="Funcionario.Login" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Funcionario.Senha" class="control-label"></label>
                            <input asp-for="Funcionario.Senha" class="form-control" />
                            <span asp-validation-for="Funcionario.Senha" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-6"></div>
                </div> 
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
