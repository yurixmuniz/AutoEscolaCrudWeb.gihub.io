@page
@model ExercicioAutoEscola.Pages.FaleConoscoModel
@{
    ViewData["Title"] = "Deixe Sua Dúvida";
}
<h1 class="text-light text-center">@ViewData["Title"]</h1>

<div class="text-center text-light">
    <form>
        <div class="form-group">
           
            <div class="row mb-3" style="height:20px"></div>
            <div class="row mb-3">
                <div class="col-md-2"></div>
                <label for="exampleInputEmail">Digite Seu Email</label>
                <div class="col">
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="col-md-2"></div>

            </div>

        </div>
        <div class="form-group">
            <div class="row mb-3" style="height:20px"></div>
            <div class="row mb-3">
                <div class="col-md-2"></div>
                <label for="exampleInputTextArea">Digite sua Duvida</label>
                <div class="col">

                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"></div>
                <div class="col">
                    <textarea id="txtDuvida" class="form-control" style="height:300px; width:700px">digite sua duvida</textarea>
                </div>
                <div class="col-md-1"></div>
            </div>

           

        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Concorda em receber emails de promoções</label>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

</div>